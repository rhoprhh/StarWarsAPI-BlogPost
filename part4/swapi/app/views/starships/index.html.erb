<div class='jumbotron'><h1 class='text-center'> Starships </h1></div>
<div class='list-group'>
  <div class='col-md-4'>
    <% count = 0 %>
    <% @starships.all.each do |s|%>
      <% if count < 12  %>
        <a class='list-group-item' href="/starships/<%=s.id%>"><%= s.name %></a>
      <%end%>
      <% count += 1 %>
    <%end%>
  </div>
  <div class='col-md-4'>
    <% count = 0 %>
    <% @starships.all.each do |s|%>
      <% if count > 11 && count < 24  %>
        <a class='list-group-item' href="/starships/<%=s.id%>"><%= s.name %></a>
      <%end%>
      <% count += 1 %>
    <%end%>
  </div>
  <div class='col-md-4'>
    <% count = 0 %>
    <% @starships.all.each do |s|%>
      <% if count > 23  %>
        <a class='list-group-item' href="/starships/<%=s.id%>"><%= s.name %></a>
      <%end%>
      <% count += 1 %>
    <%end%>
</div>
